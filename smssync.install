    'smssync_timestamp' => array(
      'field_name' => 'smssync_timestamp',
      'cardinality' => 1,
      'type'    => 'text',
    ),

    'smssync_message_origin' => array(
      'field_name' => 'smssync_message_origin',
      'cardinality' => 1,
      'type'    => 'text',
    ),

    'smssync_message_id' => array(
      'field_name' => 'smssync_message_id',
