/**
 * Implements hook_uninstall().
 */
function smssync_uninstall() {
  node_type_delete("smssync_sms");
  node_type_delete("smssync_outbox");

  db_query('DROP TABLE IF EXISTS field_revision_smssync_device_id', array());
  db_query('DROP TABLE IF EXISTS field_revision_smssync_message_id', array());
  db_query('DROP TABLE IF EXISTS field_revision_smssync_message_origin', array());
  db_query('DROP TABLE IF EXISTS field_revision_smssync_outbox_timestamp', array());
  db_query('DROP TABLE IF EXISTS field_revision_smssync_timestamp', array());

  db_query('DROP TABLE IF EXISTS field_data_smssync_device_id', array());
  db_query('DROP TABLE IF EXISTS field_data_smssync_message_id', array());
  db_query('DROP TABLE IF EXISTS field_data_smssync_message_origin', array());
  db_query('DROP TABLE IF EXISTS field_data_smssync_outbox_timestamp', array());
  db_query('DROP TABLE IF EXISTS field_data_smssync_timestamp', array());
}
